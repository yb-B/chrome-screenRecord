{
    "manifest_version": 2,
    "name":"screenLook",
    "version":"1.0.0",
    "description":"屏幕录制",
    "icons":{
        "16":"img/stop.png",
        "48":"img/stop.png",
        "128":"img/stop.png"
    },
	"background":
	{
        "scripts":["background.js"]
    },
    "browser_action":{
        "default_icon":"icon.png",
        "default_title":"屏幕录制"
    },
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js":["index.js"],
            "run_at":"document_start"
    }
]
}