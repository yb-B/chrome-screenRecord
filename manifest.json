{
    "manifest_version": 2,
    "name":"screenLook",
    "version":"1.0.0",
    "description":"屏幕录制",
    "icons":{
        "16":"img/start.png",
        "48":"img/start.png",
        "128":"img/start.png"
    },
	"background":
	{
        "scripts":["js/background.js"]
    },

    "browser_action":{
        "default_icon":"img/start.png",
        "default_title":"点击即可开始录制"
    },
    "permissions":[
        "declarativeContent",
        "tabs",
        "activeTab"
    ],
    "content_scripts": [{
            "matches": ["<all_urls>"],
            "js":["js/detect.js"]
    }
]
}